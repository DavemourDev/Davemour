---
import { menuOptions } from "../config";
import { languageStore } from "../store/appStore";
import { t } from "../text";

const currentPage = Astro.props.current;

const $language = languageStore.get();
---

<nav
  class={"sticky z-1 ease-in-out duration-300 flex flex-row gap-4 justify-center align-center py-4 bg-white dark:bg-black"}
>
  {
    menuOptions.map((opt) => (
      <a
        href={"#" + opt.sectionId}
        class={
          "block text-blue dark:text-white text-lg bg-gray-400 hover:bg-gray-500  px-1"
        }
      >
        {t($language, opt.dictionaryKey)}
      </a>
    ))
  }
</nav>


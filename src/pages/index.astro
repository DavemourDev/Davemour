---
import BaseLayout from "../layouts/BaseLayout.astro";
import Greeting from "../components/Greeting.jsx";

const pageTitle = "Home";
---

<BaseLayout pageTitle={pageTitle}>
	<h2>Index</h2>
	<Greeting
		client:load
		messages={["Hi", "Hey", "Hallo", "Hola", "Hi there", "Howdy"]}
	/>
	<article class="a1">
		<div class="content">
			<h2>Sobre mí</h2>
			<p>Desarrollador web con más de 5 años de experiencia.</p>
			<p>
				Actualmente trabajo en <a href="https://www.{{company}}.com"
					>Gindumac</a
				>.
			</p>
			<p>Formador en nuevas tecnologías</p>
		</div>
	</article>

	<article class="a2">
		<h2>Skills</h2>
		<ul>
			<li>HTML5</li>
			<li>CSS3</li>
			<li>JavaScript</li>
			<li>PHP</li>
			<li>MySQL</li>
			<li>NodeJS</li>
			<li>React</li>
			<li>Vue</li>
			<li>Angular</li>
			<li>Git</li>
			<li>...</li>
		</ul>
	</article>
</BaseLayout>

<style>
	.a1 {
		width: 100%;
		height: 600px;
		background-color: red;
		background-image: url("img/a1.jpg");
		background-size: 100%;
		background-position: center;
	}

	.a1 .content {
		color: white;
		position: relative;
		right: 0;
		width: 50%;
	}
</style>
